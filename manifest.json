{
  "manifest_version": 3,
  "name": "YouTube Caption Extension",
  "version": "1.0",
  "permissions": [
    "activeTab"
  ],
  "host_permissions": [
    "https://goodfun.cc/*",
    "https://*.goodfun.cc/*",
    "http://goodfun.cc/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content.js"]
    }
  ]
}